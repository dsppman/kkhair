/* pages/admin/admin.wxss */
page {
  background-color: #f6f7f9;
}
.container {
  padding: 15px;
  margin: 10px;
  border-radius: 15px;
  background-color: white;
  box-shadow: 0 0 10px -5px rgba(114, 130, 138,0.5);
}

.inputbar .title {
  padding-bottom: 10px;
  border-bottom: 1px solid rgba(114, 130, 138,0.2);
  display: flex;
}

.inputbar .title .input {
  flex: 1;
  padding: 0 5px;
}

.inputbar .title .count {
  color:#b3b3b3;
}

.inputbar .content {
  margin: 10px 0;
}

.inputbar .content .input {
  width: 100%;
}

.inputbar .tags {
  padding: 10px 0;
  display: flex;
  white-space: nowrap;
}

.inputbar .tags .tag {
  margin: 0 5px;
  padding: 5px 7px;
  font-size: 14px;
  border-radius: 5px;
  background-color: rgb(248, 248, 248);
}

.inputbar .tags .active {
  background-color: rgb(251, 80, 81);
  color: white;
}

.photos {
  padding: 15px 0;
}

.photos .input {
  display: grid;
  gap: 3px;
  grid-template-columns: repeat(3, 1fr);
}

.photos .input .group {
  width: auto;
  height: 30vw;
}

.photos .input .add {
  width: auto;
  height: 30vw;
  background-color: rgb(248, 248, 248);
  line-height: 30vw;
  text-align: center;
  font-size: 15vw;
  color: rgb(195, 195, 195);
}

.photos .count {
  padding: 10px 0;
  width: 100%;
  text-align: end;
  font-size: small;
  color: #b3b3b3;
}