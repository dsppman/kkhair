/* pages/index/index.wxss */

page {
  background-color: #f6f7f9;
}

.tabbar {
  background-color: white;
  box-shadow: 0 4px 10px -10px rgba(114, 130, 138,0.6);
}

.tabbar .row {
  display: flex;
  white-space: nowrap;
  font-size: small;
  padding: 10px 0;
}

.tabbar .row .item {
  padding: 7px 15px;
}

.tabbar .row .active {
  font-weight: bold;
  background-color: #f6f7f9;
  border-radius: 30px;
  color: black;
}

.loadmore {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 40px;
}


/* 动画 */
.loading {
  width: 25px;
  height: 25px;
  background-color: grey;
  animation: sk-plane 1.2s infinite ease-in-out;
}

@keyframes sk-plane {
  0% {
    transform: perspective(120px) rotateX(0deg) rotateY(0deg); 
  } 50% {
    transform: perspective(120px) rotateX(-180.1deg) rotateY(0deg); 
  } 100% {
    transform: perspective(120px) rotateX(-180deg) rotateY(-179.9deg); 
  } 
}

.container {
  padding: 10px;
  display: grid;
  gap: 10px;
}

.container .item .head {
  background-color: white;
  margin-bottom: 1px;
  border-radius: 10px 10px 0 0;
  font-weight: bold;
  display: flex;
  align-items: center;
  padding: 15px 12px;
}

.container .item .head .title {
  flex: 1;
}

.container .item .head .share {
  padding: 7px 15px;
  background-color: rgb(254, 222, 0);
  border-radius: 30px;
  font-size: small;
  line-height:normal;
  width: 80px;
}

.container .item .content {
  background-color: white;
  padding: 12px;
  border-radius: 0 0 10px 10px;
}

.container .item .content .thumb {
  margin-top: 7px;
  border-radius: 5px;
  width: 100%;
  max-height: 100vw;
}